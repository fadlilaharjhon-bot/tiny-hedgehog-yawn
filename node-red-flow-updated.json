    {
        "id": "add-to-history",
        "type": "function",
        "z": "a1b2c3d4e5f6g7h8",
        "name": "Buat Entri Log",
        "func": "// Ambil history yang ada, atau buat array baru jika belum ada\nlet history = flow.get('activityLog') || [];\n\n// Buat timestamp\nconst now = new Date();\nconst timestamp = now.toLocaleTimeString('id-ID');\n\n// Buat entri baru\nconst newEntry = {\n    time: timestamp,\n    message: msg.payload\n};\n\n// Tambahkan entri baru ke awal array\nhistory.unshift(newEntry);\n\n// Batasi jumlah log menjadi 50 entri\nif (history.length > 50) {\n    history.pop();\n}\n\n// Simpan kembali ke flow context\nflow.set('activityLog', history);\n\n// Kirim array history ke UI\nmsg.payload = history;\nreturn msg;",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 640,
        "y": 900,
        "wires": [
            [
                "ui-log-template"
            ]
        ]
    },
