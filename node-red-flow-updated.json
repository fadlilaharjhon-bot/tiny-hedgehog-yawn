        "format": "<style>\n    .log-table {\n        width: 100%;\n        border-collapse: collapse;\n    }\n    .log-table th, .log-table td {\n        padding: 8px;\n        text-align: left;\n        border-bottom: 1px solid #444;\n    }\n    .log-table th {\n        font-weight: bold;\n    }\n    .log-time {\n        font-family: monospace;\n        color: #aaa;\n        min-width: 80px;\n    }\n</style>\n\n<table class=\"log-table\">\n    <thead>\n        <tr>\n            <th>Waktu</th>\n            <th>Aktivitas</th>\n        </tr>\n    </thead>\n    <tbody>\n        <tr ng-repeat=\"entry in msg.payload\">\n            <td class=\"log-time\">{{entry.time}}</td>\n            <td>{{entry.message}}</td>\n        </tr>\n    </tbody>\n</table>\n",
